    <bpmn:serviceTask id="Activity_1kc8xs8" name="Obtain All Client Purchases From Last Month">
      <bpmn:extensionElements>
        <camunda:connector>
          <camunda:inputOutput>
            <camunda:inputParameter name="method">GET</camunda:inputParameter>
            <camunda:inputParameter name="url">http://${KONG_ADDRESS}:8000/Purchase</camunda:inputParameter>
            <camunda:inputParameter name="headers">
              <camunda:map>
                <camunda:entry key="accept">application/json</camunda:entry>
                <camunda:entry key="Content-Type">application/json</camunda:entry>
              </camunda:map>
            </camunda:inputParameter>
            <camunda:outputParameter name="ClientPurchases_ignored">
              <camunda:script scriptFormat="JavaScript">var responseString = connector.getVariable("response");
var response = S(responseString).elements();

var targetId = connector.getVariable("LoyaltyCardID");

var filtered = [];

var now = new Date();
var oneMonthAgo = new Date(now);
oneMonthAgo.setMonth(now.getMonth() - 1);

for (var i = 0; i &lt; response.size(); i++) {
  var item = response.get(i);
  var timestampStr = item.prop("timestamp").value();

  var purchaseDate = new Date(timestampStr);

  if (item.prop("loyaltyCard_id").value() == targetId &amp;&amp; purchaseDate &gt;= oneMonthAgo ) {
filtered.push({
      id: item.prop("id").value(),
      timestamp: item.prop("timestamp").value(),
      price: item.prop("price").value(),
      product: item.prop("product").value(),
      supplier: item.prop("supplier").value(),
      shop_id: item.prop("shop_id").value(),
      loyaltyCard_id: targetId,
      discountCoupon_id: item.prop("discountCoupon_id").value()
    });
 }
}

connector.setVariable("ClientPurchases", S(JSON.stringify(filtered)));
</camunda:script>
            </camunda:outputParameter>
          </camunda:inputOutput>
          <camunda:connectorId>http-connector</camunda:connectorId>
        </camunda:connector>
