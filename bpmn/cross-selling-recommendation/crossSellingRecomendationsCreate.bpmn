    <bpmn:scriptTask id="Activity_1tznu53" name="Calculate Cross Selling Recommendation" scriptFormat="JavaScript">
      <bpmn:incoming>Flow_1jctxxz</bpmn:incoming>
      <bpmn:outgoing>Flow_12m3ahh</bpmn:outgoing>
      <bpmn:script>var purchases = JSON.parse(execution.getVariable("ClientPurchases"));

var count = {};

for (var i = 0; i &lt; purchases.length; i++) {
  var shopId = purchases[i].shop_id;
  count[shopId] = (count[shopId] || 0) + 1;
}

var entries = Object.keys(count).map(function(id) {
  return { id: id, count: count[id] };
});

entries.sort(function(a, b) {
  return b.count - a.count;
});

function getTied(arr, index) {
  var base = arr[index].count;
  var tied = arr.filter(function(el) {
    return el.count == base;
  });
  return tied;
}

function getRandomSubset(arr, maxSize) {
  var arrCopy = arr.slice(0);
  for (var i = arrCopy.length - 1; i &gt; 0; i--) {
    var j = Math.floor(Math.random() * (i + 1)); 
    var temp = arrCopy[i];
    arrCopy[i] = arrCopy[j];
    arrCopy[j] = temp;
  }
  return arrCopy.slice(0, maxSize);
}

var maxCount = entries.length &gt; 0 ? entries[0].count : 0;
var maxEntries = getTied(entries, 0);
if (maxEntries.length &gt; 3) {
  maxEntries = getRandomSubset(maxEntries, 3);
}

var minCount = entries.length &gt; 0 ? entries[entries.length - 1].count : 0;
var minEntries = getTied(entries, entries.length - 1);
if (minEntries.length &gt; 3) {
  minEntries = getRandomSubset(minEntries, 3);
}

if (minCount == maxCount)
execution.setVariable("crossSellingRecommendations", null);
else{
var crossSelling = maxEntries.map(function(el) { return parseInt(el.id); })
  .concat(minEntries.map(function(el) { return parseInt(el.id); }));

execution.setVariable("crossSellingRecommendations", JSON.stringify(crossSelling));
}</bpmn:script>
