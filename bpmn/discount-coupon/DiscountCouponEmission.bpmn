    <bpmn:scriptTask id="Activity_1tznu53" name="Create Discount Coupon Emission Requests" scriptFormat="JavaScript">
      <bpmn:incoming>Flow_1qxs27z</bpmn:incoming>
      <bpmn:outgoing>Flow_1wnmeex</bpmn:outgoing>
      <bpmn:script>var purchasesJson = execution.getVariable("ClientPurchases");
var loyaltyCardId = execution.getVariable("LoyaltyCardID");

var purchases = JSON.parse(purchasesJson);

var visitsPerShop = {};

for (var i = 0; i &lt; purchases.length; i++) {
  var shopId = purchases[i].shop_id;
  visitsPerShop[shopId] = (visitsPerShop[shopId] || 0) + 1;
}

var discountGroups = {
  5: [],
  10: [],
  15: []
};

for (var shopId in visitsPerShop) {
  var visits = visitsPerShop[shopId];
  if (visits &gt; 10) {
    discountGroups[5].push(Number(shopId));
  } else if (visits &gt; 5) {
    discountGroups[10].push(Number(shopId));
  } else if (visits &gt;= 3) {
    discountGroups[15].push(Number(shopId));
  }
}

var now = new Date();
var expirationDate = new Date(now.getTime() + 30*24*60*60*1000).toISOString();

var couponRequests = [];

for (var discount in discountGroups) {
  var shops = discountGroups[discount];
  if (shops.length &gt; 0) {
    couponRequests.push({
      idLoyaltyCard: loyaltyCardId,
      idsShops: shops,
      discount: Number(discount),
      expirationDate: expirationDate
    });
  }
}

execution.setVariable("DiscountCouponRequests", JSON.stringify(couponRequests));
execution.setVariable("DiscountCouponRequestsSize", couponRequests.length);
execution.setVariable("requestsIndex", 0);</bpmn:script>
    </bpmn:scriptTask>
    <bpmn:serviceTask id="Activity_1kc8xs8" name="Obtain All Client Purchases From Last Month">
      <bpmn:extensionElements>
        <camunda:connector>
          <camunda:inputOutput>
            <camunda:inputParameter name="method">GET</camunda:inputParameter>
            <camunda:inputParameter name="url">http://${KONG_ADDRESS}:8000/Purchase</camunda:inputParameter>
            <camunda:inputParameter name="headers">
              <camunda:map>
                <camunda:entry key="accept">application/json</camunda:entry>
                <camunda:entry key="Content-Type">application/json</camunda:entry>
              </camunda:map>
            </camunda:inputParameter>
            <camunda:outputParameter name="ClientPurchases_ignored">
              <camunda:script scriptFormat="JavaScript">var responseString = connector.getVariable("response");
var response = S(responseString).elements();

var targetId = connector.getVariable("LoyaltyCardID");

var filtered = [];

var now = new Date();
var oneMonthAgo = new Date(now);
oneMonthAgo.setMonth(now.getMonth() - 1);

for (var i = 0; i &lt; response.size(); i++) {
  var item = response.get(i);
  var timestampStr = item.prop("timestamp").value();

  var purchaseDate = new Date(timestampStr);

  if (item.prop("loyaltyCard_id").value() == targetId &amp;&amp; purchaseDate &gt;= oneMonthAgo ) {
filtered.push({
      id: item.prop("id").value(),
      timestamp: item.prop("timestamp").value(),
      price: item.prop("price").value(),
      product: item.prop("product").value(),
      supplier: item.prop("supplier").value(),
      shop_id: item.prop("shop_id").value(),
      loyaltyCard_id: targetId,
      discountCoupon_id: item.prop("discountCoupon_id").value()
    });
 }
}

connector.setVariable("ClientPurchases", S(JSON.stringify(filtered)));
</camunda:script>
